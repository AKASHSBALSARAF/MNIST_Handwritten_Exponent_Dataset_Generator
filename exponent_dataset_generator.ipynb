import os
import random
import csv
import numpy as np
from PIL import Image, ImageFilter
import cv2
from tensorflow.keras.datasets import mnist
from tqdm import tqdm
import matplotlib.pyplot as plt

BASE_PATH = os.getcwd()
EXPONENT_DIR = os.path.join(BASE_PATH, "exponent_digits")
OUTPUT_DIR = os.path.join(BASE_PATH, "combined_dataset")
CSV_PATH = os.path.join(BASE_PATH, "annotations.csv")

os.makedirs(EXPONENT_DIR, exist_ok=True)
os.makedirs(OUTPUT_DIR, exist_ok=True)

# laoding MNIST
(x_train, y_train), (x_test, y_test) = mnist.load_data()
all_images = np.concatenate((x_train, x_test))
all_labels = np.concatenate((y_train, y_test))
print(f"MNIST loaded: {len(all_images)} samples")

def crop_digit(image, padding=2):
    _, thresh = cv2.threshold(image, 10, 255, cv2.THRESH_BINARY)
    coords = cv2.findNonZero(thresh)
    x, y, w, h = cv2.boundingRect(coords)
    cropped = image[y:y+h, x:x+w]
    cropped = cv2.copyMakeBorder(cropped, padding, padding, padding, padding, cv2.BORDER_CONSTANT, value=0)
    cropped = cv2.resize(cropped, (28, 28))
    return cropped

def random_transform(img):
    """Apply random handwriting-like effects."""
    if random.random() < 0.6:
        img = img.rotate(random.randint(-20, 20))
    if random.random() < 0.4:
        img = img.filter(ImageFilter.GaussianBlur(random.uniform(0, 1.0)))
    return img

# Cache MNIST by label
digit_groups = {i: [] for i in range(10)}
for i, lbl in enumerate(all_labels):
    digit_groups[lbl].append(all_images[i])

# dataset generation
metadata = []
NUM_IMAGES = 5000

for i in tqdm(range(NUM_IMAGES), desc="Generating combined images"):
    base_digit = random.randint(0, 9)
    exp_digit = random.randint(0, 9)

    base_img = crop_digit(random.choice(digit_groups[base_digit]))
    exp_img = crop_digit(random.choice(digit_groups[exp_digit]))
    exp_img = cv2.resize(exp_img, (12, 12))

    base_pil = Image.fromarray(base_img)
    exp_pil = Image.fromarray(exp_img)

    base_pil = random_transform(base_pil)
    exp_pil = random_transform(exp_pil)

    canvas = Image.new("L", (64, 64), color=0)
    base_x, base_y = 15, 22
    canvas.paste(base_pil, (base_x, base_y))

    exp_x_offset = random.randint(18, 22)
    exp_y_offset = random.randint(-14, -10)
    exp_pos = (base_x + exp_x_offset, base_y + exp_y_offset)
    canvas.paste(exp_pil, exp_pos)

    output_path = os.path.join(OUTPUT_DIR, f"combined_{i}.png")
    canvas.save(output_path)
    metadata.append([base_digit, exp_digit, output_path, exp_pos[0], exp_pos[1]])

with open(CSV_PATH, "w", newline="") as f:
    writer = csv.writer(f)
    writer.writerow(["base_digit", "exponent_digit", "image_path", "exp_x", "exp_y"])
    writer.writerows(metadata)

print(f"Dataset generated: {NUM_IMAGES} images saved at {OUTPUT_DIR}")
