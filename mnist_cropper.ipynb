import os
import numpy as np
import cv2
from PIL import Image
from tensorflow.keras.datasets import mnist
from tqdm import tqdm

BASE_PATH = os.getcwd()
OUTPUT_DIR = os.path.join(BASE_PATH, "cropped_mnist_digits")
os.makedirs(OUTPUT_DIR, exist_ok=True)

# loading MNIST data
(x_train, y_train), (x_test, y_test) = mnist.load_data()
all_images = np.concatenate((x_train, x_test))
all_labels = np.concatenate((y_train, y_test))
print(f"Loaded {len(all_images)} MNIST images")

def crop_mnist_digit(image, padding=2):
    """Cropping the digit region tightly."""
    _, thresh = cv2.threshold(image, 10, 255, cv2.THRESH_BINARY)
    coords = cv2.findNonZero(thresh)
    x, y, w, h = cv2.boundingRect(coords)
    cropped = image[y:y+h, x:x+w]
    cropped = cv2.copyMakeBorder(cropped, padding, padding, padding, padding, cv2.BORDER_CONSTANT, value=0)
    cropped = cv2.resize(cropped, (28, 28))
    return cropped

# saving cropped digits
for i in tqdm(range(1000), desc="Cropping MNIST digits"):
    img = crop_mnist_digit(all_images[i])
    label = all_labels[i]
    Image.fromarray(img).save(os.path.join(OUTPUT_DIR, f"mnist_{i}_{label}.png"))

print("MNIST cropping complete.")
